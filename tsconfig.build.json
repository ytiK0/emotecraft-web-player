{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "bundler",
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/lib/*"] }
  },
  "include": ["src/lib"]
}
